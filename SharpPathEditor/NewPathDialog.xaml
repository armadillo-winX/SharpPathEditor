<Window x:Class="SharpPathEditor.NewPathDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpPathEditor"
        mc:Ignorable="d"
        Title="新規" Height="120" Width="299" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="PathTextBox" Margin="10,10,57,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" MaxLines="1"/>
        <Button x:Name="BrowseButton" Content="参照(_B)" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="BrowseButton_Click"/>
        <Button x:Name="OKButton" Content="_OK" Width="90" IsDefault="True" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="OKButton_Click"/>

    </Grid>
</Window>
